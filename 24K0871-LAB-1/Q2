#include <iostream>
using namespace std;

class Box
{
private:
    int *volume;

public:
    Box()
    {
        volume = new int(0);
    }

    Box(int vol)
    {
        volume = new int(vol);
    }

    Box(const Box &other)
    {
        volume = new int(*other.volume);
    }

    ~Box()
    {
        delete volume;
    }

    void display() const
    {
        cout << "Volume: " << *volume << endl;
    }

    void setVolume(int vol)
    {
        *volume = vol;
    }
};

int main()
{
    Box box1(10);
    Box box2 = box1;

    box2.setVolume(20);

    cout << "Box1: ";
    box1.display();
    cout << "Box2: ";
    box2.display();

    return 0;
}
