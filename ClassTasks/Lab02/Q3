#include <iostream>
using namespace std;

int main()
{
    int **arr;
    int rows;

    cout << "Enter number of teams: ";
    cin >> rows;

    arr = new int *[rows];
    int sizes[rows];

    for (int i = 0; i < rows; i++)
    {
        int size;
        cout << "Enter number of players for team " << i + 1 << ": ";
        cin >> size;
        sizes[i] = size;
        arr[i] = new int[size];

        cout << "Enter scores for team " << i + 1 << ": ";
        for (int j = 0; j < size; j++)
        {
            cin >> arr[i][j];
        }
    }

    cout << "\nScores and sums:\n";
    for (int i = 0; i < rows; i++)
    {
        int sum = 0;
        cout << "Team " << i + 1 << ": ";
        for (int j = 0; j < sizes[i]; j++)
        {
            cout << arr[i][j] << " ";
            sum += arr[i][j];
        }
        cout << " | Sum: " << sum << endl;
    }

    for (int i = 0; i < rows; i++)
    {
        delete[] arr[i];
    }
    delete[] arr;

    return 0;
}
